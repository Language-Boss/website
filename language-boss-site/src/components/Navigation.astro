---
const navLinks = [
  { href: '#problem', label: 'Problem', key: 'nav-problem' },
  { href: '#why', label: 'Why Us', key: 'nav-why' },
  { href: '#about', label: 'About', key: 'nav-about' },
];
---

<nav class="nav" id="nav">
  <div class="nav-container">
    <a href="#" class="nav-brand">
      <img src="/logo.png" alt="Language Boss" class="nav-logo" />
      <div class="nav-brand-text">
        <span class="nav-brand-name">Language Boss</span>
        <span class="nav-brand-tagline" data-i18n="brand-tagline">English OS for Schools</span>
      </div>
    </a>
    
    <div class="nav-links">
      {navLinks.map(link => (
        <a href={link.href} class="nav-link" data-i18n={link.key}>{link.label}</a>
      ))}
    </div>
    
    <a href="#demo" class="btn btn-primary nav-cta" data-i18n="nav-demo">Book a Demo</a>

    <div class="lang-toggle" aria-label="Language switcher">
      <button class="lang-btn" data-lang="zh">繁中</button>
      <button class="lang-btn" data-lang="en">EN</button>
    </div>
    
    <button class="nav-toggle" aria-label="Toggle menu" aria-expanded="false">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</nav>

<div class="mobile-menu" id="mobile-menu">
  <div class="mobile-menu-inner">
    {navLinks.map(link => (
      <a href={link.href} class="mobile-link" data-i18n={link.key}>{link.label}</a>
    ))}
    <a href="#demo" class="btn btn-primary mobile-cta" data-i18n="nav-demo">Book a Demo</a>

    <div class="lang-toggle mobile-lang" aria-label="Language switcher">
      <button class="lang-btn" data-lang="zh">繁中</button>
      <button class="lang-btn" data-lang="en">EN</button>
    </div>
  </div>
</div>

<style>
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: 1rem 0;
    transition: all 0.4s var(--ease-out-expo);
  }
  
  .nav.scrolled {
    background: rgba(250, 249, 247, 0.9);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    box-shadow: 0 2px 20px rgba(10, 22, 40, 0.06);
    padding: 0.75rem 0;
  }
  
  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }
  
  .nav-brand {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
  }
  
  .nav-logo {
    width: 42px;
    height: 42px;
    object-fit: contain;
    border-radius: 10px;
  }
  
  .nav-brand-text {
    display: flex;
    flex-direction: column;
    line-height: 1.2;
  }
  
  .nav-brand-name {
    font-weight: 600;
    font-size: 1.125rem;
    color: var(--color-ink);
  }
  
  .nav-brand-tagline {
    font-size: 0.75rem;
    color: var(--color-ink-subtle);
    font-weight: 400;
  }
  
  .nav-links {
    display: flex;
    align-items: center;
    gap: 2.5rem;
  }
  
  .nav-link {
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-ink-light);
    transition: color 0.2s ease;
    position: relative;
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-accent);
    transition: width 0.3s var(--ease-out-expo);
  }
  
  .nav-link:hover {
    color: var(--color-ink);
  }
  
  .nav-link:hover::after {
    width: 100%;
  }
  
  .nav-cta {
    padding: 0.625rem 1.25rem;
    font-size: 0.875rem;
  }
  
  .lang-toggle {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    background: rgba(10, 22, 40, 0.05);
    padding: 0.35rem;
    border-radius: var(--radius-full);
  }

  .lang-btn {
    border: none;
    background: transparent;
    padding: 0.35rem 0.75rem;
    font-weight: 700;
    font-size: 0.8125rem;
    border-radius: var(--radius-full);
    cursor: pointer;
    color: var(--color-ink-subtle);
    transition: all 0.25s var(--ease-out-expo);
  }

  .lang-btn.active {
    background: var(--color-ink);
    color: var(--color-paper);
  }

  .mobile-lang {
    display: none;
  }

  .nav-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    padding: 8px;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 1001;
  }
  
  .nav-toggle span {
    display: block;
    width: 24px;
    height: 2px;
    background: var(--color-ink);
    transition: all 0.3s var(--ease-out-expo);
  }
  
  .nav-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }
  
  .nav-toggle.active span:nth-child(2) {
    opacity: 0;
  }
  
  .nav-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }
  
  .mobile-menu {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--color-paper);
    z-index: 999;
    opacity: 0;
    visibility: hidden;
    transition: all 0.4s var(--ease-out-expo);
  }
  
  .mobile-menu.active {
    opacity: 1;
    visibility: visible;
  }
  
  .mobile-menu-inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    gap: 2rem;
    padding: 2rem;
  }
  
  .mobile-link {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-ink);
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.4s var(--ease-out-expo);
  }
  
  .mobile-menu.active .mobile-link {
    opacity: 1;
    transform: translateY(0);
  }
  
  .mobile-menu.active .mobile-link:nth-child(1) { transition-delay: 0.1s; }
  .mobile-menu.active .mobile-link:nth-child(2) { transition-delay: 0.15s; }
  .mobile-menu.active .mobile-link:nth-child(3) { transition-delay: 0.2s; }
  
  .mobile-cta {
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.4s var(--ease-out-expo);
    transition-delay: 0.25s;
  }
  
  .mobile-menu.active .mobile-cta {
    opacity: 1;
    transform: translateY(0);
  }
  
  @media (max-width: 768px) {
    .nav-links,
    .nav-cta {
      display: none;
    }
    
    .nav-toggle {
      display: flex;
    }

    .lang-toggle {
      display: none;
    }

    .mobile-lang {
      display: flex;
    }
  }
</style>

<script>
  // Navigation scroll effect
  const nav = document.getElementById('nav');
  
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      nav?.classList.add('scrolled');
    } else {
      nav?.classList.remove('scrolled');
    }
  });
  
  // Mobile menu toggle
  const toggle = document.querySelector('.nav-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileLinks = document.querySelectorAll('.mobile-link, .mobile-cta');
  
  toggle?.addEventListener('click', () => {
    toggle.classList.toggle('active');
    mobileMenu?.classList.toggle('active');
    document.body.style.overflow = mobileMenu?.classList.contains('active') ? 'hidden' : '';
  });
  
  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      toggle?.classList.remove('active');
      mobileMenu?.classList.remove('active');
      document.body.style.overflow = '';
    });
  });
</script>

