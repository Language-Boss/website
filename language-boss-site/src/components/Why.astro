<style>
  .why {
    position: relative;
    padding: 6rem 0;
    background: var(--color-paper-warm);
    overflow: hidden;
  }
  
  .why-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }
  
  .bg-blob {
    position: absolute;
    top: 20%;
    left: -10%;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(232, 93, 76, 0.05) 0%, transparent 70%);
    border-radius: 50%;
    filter: blur(60px);
  }
  
  .why-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 4rem;
  }
  
  .why-title {
    font-size: clamp(2rem, 4vw, 3rem);
    line-height: 1.2;
    margin-bottom: 1.5rem;
  }
  
  .highlight {
    position: relative;
    color: var(--color-accent);
  }
  
  .why-lede {
    font-size: 1.125rem;
    color: var(--color-ink-light);
    line-height: 1.7;
  }
  
  .why-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-bottom: 4rem;
  }
  
  .diff-card {
    background: white;
    border-radius: var(--radius-lg);
    padding: 2rem;
    box-shadow: 
      0 2px 8px rgba(10, 22, 40, 0.04),
      0 12px 40px rgba(10, 22, 40, 0.06);
  }
  
  .diff-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: var(--color-ink);
  }
  
  .diff-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .diff-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.875rem 1rem;
    background: var(--color-paper);
    border-radius: var(--radius-sm);
    transition: all 0.3s var(--ease-out-expo);
  }
  
  .diff-item:hover {
    background: var(--color-accent-glow);
    transform: translateX(4px);
  }
  
  .diff-icon {
    font-size: 1.25rem;
  }
  
  .diff-text {
    font-size: 0.9375rem;
    color: var(--color-ink-light);
    font-weight: 500;
  }
  
  .control-card {
    background: linear-gradient(135deg, var(--color-ink) 0%, var(--color-ink-light) 100%);
    border-radius: var(--radius-lg);
    padding: 2rem;
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .control-title {
    font-size: 1.5rem;
    font-weight: 600;
    line-height: 1.3;
    margin-bottom: 1rem;
  }
  
  .control-body {
    font-size: 1rem;
    line-height: 1.7;
    color: rgba(250, 249, 247, 0.8);
    margin-bottom: 2rem;
  }
  
  .cta-strip {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-md);
    flex-wrap: wrap;
  }
  
  .cta-text {
    font-weight: 500;
    color: rgba(255, 255, 255, 0.9);
  }
  
  .feature-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }
  
  .feature-item {
    text-align: center;
    padding: 1.5rem;
  }
  
  .feature-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    background: white;
    border-radius: var(--radius-md);
    color: var(--color-accent);
    margin-bottom: 1rem;
    box-shadow: 0 4px 20px rgba(10, 22, 40, 0.08);
    transition: all 0.3s var(--ease-out-expo);
  }
  
  .feature-item:hover .feature-icon {
    transform: translateY(-4px) rotate(5deg);
    box-shadow: 0 8px 30px rgba(10, 22, 40, 0.12);
  }
  
  .feature-item h4 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-ink);
    margin-bottom: 0.5rem;
  }
  
  .feature-item p {
    font-size: 0.875rem;
    color: var(--color-ink-subtle);
    line-height: 1.5;
  }
  
  @media (max-width: 900px) {
    .why-grid {
      grid-template-columns: 1fr;
    }
    
    .feature-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 600px) {
    .feature-grid {
      grid-template-columns: 1fr;
    }
    
    .cta-strip {
      flex-direction: column;
      text-align: center;
    }
  }
</style>

